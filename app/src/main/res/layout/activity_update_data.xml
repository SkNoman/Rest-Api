<?xml version="1.0" encoding="utf-8"?>
<!--in this we are displaying a nested scroll view-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".UpdateData">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Id:"
        android:id="@+id/emp_id_et"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Name:"
        android:id="@+id/emp_name_et"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Designation:"
        android:id="@+id/emp_designation_et"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Update Data"
        android:layout_marginTop="15dp"
        android:id="@+id/insert_data_Btn"
        android:backgroundTint="@color/black"
        />


    <ProgressBar
        android:id="@+id/progressbar_id_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />



</LinearLayout>
